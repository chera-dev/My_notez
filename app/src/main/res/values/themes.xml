<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotez" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/very_dark_blue</item>
        <item name="colorPrimaryVariant">@color/very2_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/very_dark_blue</item>
        <item name="colorSecondaryVariant">#BF000000</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/very3_light_pale_dark_blue</item>
        <item name="android:itemBackground">@color/very_dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MyNotez.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyNotez.ImageInBottomDialog">
        <item name="android:fillColor">@color/black</item>
        <item name="android:tint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Theme.MyNotez.Card">
        <item name="cardBackgroundColor">@color/very4_light_pale_dark_blue</item>
    </style>

    <style name="Theme.MyNotez.TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MyNotez.NavDrawer">
        <item name="android:background">@color/very3_light_pale_dark_blue</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="Theme.MyNotez.BottomSheet">
        <item name="android:background">@color/very4_light_pale_dark_blue</item>
    </style>

    <style name="Theme.MyNotez.EditText">
        <item name="android:background">@color/very3_light_pale_dark_blue</item>
        <item name="android:textColorHint">@color/very2_dark_blue</item>
        <item name="android:textColor">@color/very2_dark_blue</item>
    </style>

    <style name="Theme.MyNotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyNotes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.search" parent="Theme.MyNotez">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">#92000000</item>
    </style>

    <style name="ThemeOverlay.TextView" parent="Theme.MyNotez">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/very3_light_pale_dark_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorAlertDialogListItem">@color/black</item>
        <item name="android:textColorSecondary">@color/very2_dark_blue</item>
    </style>

</resources>