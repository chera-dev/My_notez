<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotez" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/very_dark_blue</item>
        <item name="colorPrimaryVariant">@color/very2_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/very3_light_pale_dark_blue</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/very2_dark_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/very1_dark_blue</item>


    </style>

    <style name="Theme.MyNotez.ImageInBottomDialog">
        <item name="android:fillColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Theme.MyNotez.BottomSheet">
        <item name="android:background">@color/new_dark_blue</item>
    </style>

    <style name="Theme.MyNotez.Card">
        <item name="cardBackgroundColor">@color/new4_dark_blue</item>
    </style>

    <style name="Theme.MyNotez.TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MyNotez.NavDrawer">
        <item name="android:background">@color/new4_dark_blue</item>
        <item name="colorNavigationItemSelected">@color/very_light_pale_dark_blue</item>
    </style>

</resources>